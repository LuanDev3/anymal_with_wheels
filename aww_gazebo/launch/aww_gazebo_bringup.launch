<?xml version="1.0" encoding="utf-8"?>

<launch>

    <arg name="rviz" default="false"/>
    <arg name="x" default="-4"/>
    <arg name="y" default="-4"/>
    <arg name="z" default="0.4"/>
    <arg name="yaw" default="0.0"/>
    <arg name="gui" default="true" />
    <arg name="description_name"         default="robot_description"/>
    <arg name="description_file"         default="$(find aww_description)/urdf/anymal_with_wheels.urdf"/>
    <arg name="joint_states_topic"       default="joint_states"/>

    <param name="$(arg description_name)" textfile="$(arg description_file)"/>

    <!-- Launch Gazebo  -->
    <include file="$(find aww_gazebo)/launch/world_construction.launch">
      <arg name="x" value="$(arg x)"/>
      <arg name="y" value="$(arg y)"/>
      <arg name="z" value="$(arg z)"/>
      <arg name="yaw" value="$(arg yaw)"/>
      <arg name="gui" value="$(arg gui)"/>
    </include>
  
    <!-- ros_control position control dof aww launch file -->
    <include file="$(find aww_gazebo)/launch/aww_gazebo_position.launch" /> 

    <!-- gazebo_diff_control for the wheels launch file -->
    <include file="$(find aww_gazebo)/launch/aww_gazebo_velocities.launch" /> 

    <!-- Run Rviz and load the default config to see the state of the move_group node -->
    <group if="$(arg rviz)">
      <!-- RViz -->
      <node name="rviz" pkg="rviz" type="rviz"
        args="-d $(find aww_description)/config/rviz/standalone.rviz"
        output="screen"/>
      <node name="joint_state_publisher" pkg="joint_state_publisher_gui" ns="aww" type="joint_state_publisher_gui" output="screen">
        <param name="use_gui"           value="true"/>
        <param name="rate"              value="100"/>
        <remap from="robot_description" to="$(arg description_name)"/>
        <remap from="joint_states"      to="$(arg joint_states_topic)"/>
      </node>
    </group>

    <group unless="$(arg rviz)">
      <node name="joint_state_publisher" pkg="joint_state_publisher" ns="aww" type="joint_state_publisher" output="screen">
        <param name="rate"              value="100"/>
        <remap from="robot_description" to="$(arg description_name)"/>
        <remap from="joint_states"      to="$(arg joint_states_topic)"/>
      </node>
    </group>

</launch>